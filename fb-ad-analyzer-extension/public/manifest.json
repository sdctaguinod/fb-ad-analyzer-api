{
  "manifest_version": 3,
  "name": "Facebook Ad Analyzer",
  "version": "1.0.0",
  "description": "Analyze and capture Facebook ads from the Ad Library for competitive intelligence",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "desktopCapture",
    "alarms"
  ],
  
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://fb-ad-analyzer-pyuev885i-dominics-projects-14a42b14.vercel.app/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Facebook Ad Analyzer",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ]
}